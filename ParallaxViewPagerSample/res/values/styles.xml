<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="ButtonGray" parent="@style/ProcessButton">
        <item name="colorPressed">@color/button_gray_pressed</item>
        <item name="colorNormal">@color/button_gray_normal</item>
    </style>
    <style name="ButtonMain" parent="@style/ProcessButton">
        <item name="colorPressed">@color/button_pressed</item>
        <item name="colorNormal">@color/button_normal</item>
        <item name="colorProgress">@color/button_progress</item>
        <item name="colorComplete">@color/button_complete</item>
    </style>
    
        <style name="ProcessButton">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorError">@color/button_error</item>
    </style>
    
</resources>
